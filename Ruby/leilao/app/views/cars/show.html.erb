<p id="notice"><%= notice %></p>

<p>
  <b>Modelo do carro:</b>
  <%= Model.find(@car.model_id).name %>
</p>

<p>
  <b>Motor:</b>
  <%= @car.engine %>
</p>

<p>
  <b>Placa:</b>
  <%= @car.plate %>
</p>

<p>
	<b>Combustíveis:</b>
	<% @car.fuels.all.each do |fuel| %>
		<%= fuel.name+', ' %>
	<% end %>
</p>

<p>
  <b>Cor:</b>
  <%= @car.colour %>
</p>

<p>
  <b>Quilometragem:</b>
  <%= @car.mileage %>
</p>

<p>
  <b>Ano de fabricação:</b>
  <%= @car.manufacture_year %>
</p>

<p>
  <b>Ano do modelo:</b>
  <%= @car.model_year %>
</p>

<p>
  <b>Observações:</b>
  <%= @car.comments %>
</p>


<%= link_to 'Editar', edit_car_path(@car) %> |
<%= link_to 'Voltar', cars_path %>
