<h1>Listing cars</h1>

<table>
  <tr>
    <th>Mod code</th>
    <th>Engine</th>
    <th>Plate</th>
    <th>Colour</th>
    <th>Mileage</th>
    <th>Manufacture year</th>
    <th>Model year</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.mod_code %></td>
    <td><%= car.engine %></td>
    <td><%= car.plate %></td>
    <td><%= car.colour %></td>
    <td><%= car.mileage %></td>
    <td><%= car.manufacture_year %></td>
    <td><%= car.model_year %></td>
    <td><%= car.comments %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

